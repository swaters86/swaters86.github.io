<% if (post.link){ %>
  <h2>
    <a href="<%- url_for(post.link) %>" title="<%= post.title %>" target="_blank"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h2>
      <a href="<%- url_for(post.path) %>" title="<%= post.title %>"><%= post.title %></a>
    </h2>
  <% } else { %>
    <h2>
      <%= post.title %>
    </h2>
  <% } %>
<% } %> 